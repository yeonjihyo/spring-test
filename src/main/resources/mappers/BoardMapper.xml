<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.green.test.dao.BoardDAO">
  <select id="boardList" resultType="kr.green.test.vo.BoardVO">
    select * from board;
  </select>
  <select id="getBoard" resultType="kr.green.test.vo.BoardVO">
  	select * from board where num=#{num};
  </select>
  <update id="updateViews">
	update board set views= views+1 where num=#{num};
  </update>
  <insert id="registerBoard">
  	insert into board (title, contents, writer, file)
  	values(#{title},#{contents},#{writer},#{file});
  </insert>
  <update id="modifyBoard">
	update board set title=#{title},contents=#{contents},file=#{file} where num=#{num};
  </update>
</mapper>